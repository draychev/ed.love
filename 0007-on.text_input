function on.text_input(t, App)
  print("DEBUG(0007-on.text_input): t=" .. t)
  print("DEBUG(0007-on.text_input): mode=" .. App.mode)
  if App.mode=="edit" then
    App.insert_char(t) -- TODO: is there a better place for this
  elseif App.mode=="mini" then
    minibuffer = minibuffer .. t
  end
end
